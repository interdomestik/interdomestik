# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
NEXT_PUBLIC_SUPABASE_EVIDENCE_BUCKET=claim-evidence

# Stripe Configuration
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Interdomestik

# i18n Configuration
NEXT_PUBLIC_DEFAULT_LOCALE=sq
NEXT_PUBLIC_LOCALES=sq,en

# Email (Resend)
RESEND_API_KEY=re_...
RESEND_FROM_EMAIL=no-reply@interdomestik.com

# Optional: Novu for notifications
NOVU_API_KEY=
NEXT_PUBLIC_NOVU_APP_IDENTIFIER=

# Database (Drizzle / Supabase Connection)
DATABASE_URL=postgresql://postgres:postgres@localhost:54322/postgres

# Better Auth Configuration
BETTER_AUTH_SECRET=your-random-secret-key-min-32-chars
BETTER_AUTH_URL=http://localhost:3000
# Comma-separated list of trusted origins for auth callbacks/CSRF
BETTER_AUTH_TRUSTED_ORIGINS=http://localhost:3000,http://0.0.0.0:3000,http://127.0.0.1:3000
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Optional: Documenso for e-signatures
DOCUMENSO_API_KEY=

# Paddle Configuration
NEXT_PUBLIC_PADDLE_CLIENT_TOKEN=pc_...
PADDLE_API_KEY=
PADDLE_WEBHOOK_SECRET_KEY=
NEXT_PUBLIC_PADDLE_ENV=sandbox # sandbox or production

# Paddle Price IDs (Example mappings)
NEXT_PUBLIC_PADDLE_PRICE_BASIC_YEAR=pri_...
NEXT_PUBLIC_PADDLE_PRICE_STANDARD_YEAR=pri_...
NEXT_PUBLIC_PADDLE_PRICE_FAMILY_YEAR=pri_...
NEXT_PUBLIC_PADDLE_PRICE_BASIC_MONTH=pri_...
NEXT_PUBLIC_PADDLE_PRICE_STANDARD_MONTH=pri_...
NEXT_PUBLIC_PADDLE_PRICE_FAMILY_YEAR_MONTH=pri_...

# Optional: Upstash Redis (rate limiting)
# If unset, API rate limiting will be disabled.
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# Optional: Sentry (error monitoring)
# If unset, Sentry will be disabled.
NEXT_PUBLIC_SENTRY_DSN=
NEXT_PUBLIC_SENTRY_TRACES_SAMPLE_RATE=0
NEXT_PUBLIC_SENTRY_ENVIRONMENT=
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0
SENTRY_ENVIRONMENT=

# Cron (API route protection)
# Protects /api/cron/* endpoints. Your cron scheduler should send:
#   Authorization: Bearer $CRON_SECRET
CRON_SECRET=

# DEV ONLY: allow calling cron endpoints without Authorization header.
# Leave unset/false in production.
CRON_BYPASS_SECRET_IN_DEV=false

# Tests / Developer ergonomics
# When set to 1, i18n tests will print translation key counts.
SHOW_I18N_STATS=0

# DEV ONLY: allow bypassing Paddle webhook signature verification.
# Leave unset/false in production.
PADDLE_WEBHOOK_BYPASS_SIGNATURE_IN_DEV=false

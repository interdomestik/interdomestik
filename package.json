{
  "name": "interdomestik",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:clean": "lsof -t -i:3000 | xargs kill -9 || true && turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json}\"",
    "type-check": "turbo type-check",
    "clean": "turbo clean && rm -rf node_modules",
    "db:generate": "turbo db:generate",
    "db:migrate": "pnpm --filter @interdomestik/database migrate",
    "db:push:local": "pnpm --filter @interdomestik/database db:push",
    "db:studio": "pnpm --filter @interdomestik/database db:studio",
    "seed:e2e": "pnpm --filter @interdomestik/database seed:e2e",
    "seed:assert-e2e": "pnpm --filter @interdomestik/database seed:assert-e2e",
    "mcp:setup": "./scripts/setup-mcp.sh",
    "mcp:audit": "pnpm --filter @interdomestik/qa run-all-audits",
    "mcp:test": "pnpm mcp:audit && pnpm test",
    "qa": "pnpm --filter @interdomestik/qa check",
    "i18n:check": "node scripts/check-i18n.mjs",
    "mod:scan": "node scripts/modularization-factory.mjs --top 30",
    "mod:scan:json": "node scripts/modularization-factory.mjs --top 30 --json",
    "mod:scaffold": "node scripts/modularization-factory.mjs --top 10 --scaffold",
    "mod:scan:todo": "node scripts/modularization-factory.mjs --top 30 --data-only --needs-core",
    "mod:scan:todo:json": "node scripts/modularization-factory.mjs --top 30 --data-only --needs-core --json",
    "mod:scaffold:todo": "node scripts/modularization-factory.mjs --top 10 --data-only --needs-core --scaffold",
    "mod:inventory": "node scripts/modularization-inventory.mjs --top 40 --min-lines 120",
    "mod:inventory:json": "node scripts/modularization-inventory.mjs --top 40 --min-lines 120 --json",
    "mod:autopilot": "node scripts/modularize-autopilot.mjs",
    "mod:autopilot:apply": "node scripts/modularize-autopilot.mjs --apply",
    "check:entrypoints": "node scripts/check-entrypoints-no-db.mjs",
    "check:entrypoints:strict": "node scripts/check-entrypoints-no-db.mjs --strict",
    "test": "pnpm --filter @interdomestik/web test:unit --run",
    "test:unit:domains": "pnpm --filter @interdomestik/domain-claims test:unit && pnpm --filter @interdomestik/domain-users test:unit && pnpm --filter @interdomestik/domain-communications test:unit",
    "test:coverage": "pnpm --filter @interdomestik/web test:unit --coverage && pnpm --filter @interdomestik/domain-* test:unit --coverage",
    "test:e2e": "pnpm --filter @interdomestik/web test:e2e",
    "e2e:gate": "./scripts/m4-gatekeeper.sh && pnpm --filter @interdomestik/web exec playwright test e2e/gate --project=ks-sq --project=mk-mk --max-failures=1 --trace=retain-on-failure --reporter=line",
    "e2e:merge": "./scripts/m4-gatekeeper.sh && pnpm --filter @interdomestik/web exec playwright test e2e/gate e2e/golden --grep-invert \"@quarantine|@visual|@legacy\" --project=ks-sq --project=mk-mk --trace=retain-on-failure --reporter=line",
    "e2e:gate:ks": "./scripts/m4-gatekeeper.sh && pnpm --filter @interdomestik/web exec playwright test e2e/gate --project=ks-sq --max-failures=1 --trace=retain-on-failure --reporter=line",
    "e2e:gate:mk": "./scripts/m4-gatekeeper.sh && pnpm --filter @interdomestik/web exec playwright test e2e/gate --project=mk-mk --max-failures=1 --trace=retain-on-failure --reporter=line",
    "check:fast": "pnpm format:check && pnpm lint && pnpm type-check && pnpm i18n:check && pnpm check:entrypoints && pnpm test:unit:domains && pnpm test",
    "check": "pnpm check:fast && pnpm build",
    "sonar:start": "docker compose up -d sonarqube db",
    "sonar:stop": "docker compose stop sonarqube db",
    "sonar:down": "docker compose down",
    "sonar:reset": "docker compose down -v --remove-orphans",
    "sonar:logs": "docker compose logs -f sonarqube",
    "sonar:scan": "node scripts/sonar-scan.mjs",
    "sonar:full": "pnpm type-check && pnpm test:coverage && pnpm sonar:scan",
    "sonar:full:dotenv": "node scripts/run-with-dotenv.mjs pnpm sonar:full",
    "commitlint": "commitlint --from=HEAD~1",
    "release": "release-it",
    "release:dry": "release-it --dry-run",
    "prepare": "husky",
    "track:audit": "node scripts/track-audit.mjs",
    "start:system": "./scripts/start-system.sh",
    "start:system:quick": "./scripts/start-system-quick.sh",
    "purity:audit": "node scripts/purity-audit.mjs"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@playwright/mcp": "^0.0.54",
    "@release-it/conventional-changelog": "^10.0.4",
    "@supabase/supabase-js": "^2.87.1",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.19.3",
    "@upstash/context7-mcp": "^2.0.1",
    "bcryptjs": "^3.0.3",
    "dotenv": "^17.2.3",
    "glob": "^13.0.0",
    "gzip-size": "^7.0.0",
    "hono": "^4.11.1",
    "husky": "^9.1.7",
    "js-yaml": "^4.1.1",
    "jsonwebtoken": "^9.0.3",
    "knip": "^5.80.0",
    "lint-staged": "^16.1.6",
    "postgres": "^3.4.7",
    "prettier": "^3.7.4",
    "react-devtools": "^7.0.1",
    "release-it": "^19.2.2",
    "turbo": "^2.7.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@10.25.0",
  "pnpm": {
    "overrides": {
      "esbuild": "^0.25.0",
      "zod": "4.2.1"
    }
  },
  "dependencies": {
    "checkly": "^6.9.8"
  }
}

{
  "name": "interdomestik",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "typecheck": "pnpm type-check",
    "type-check": "turbo type-check",
    "clean": "turbo clean && rm -rf node_modules",
    "db:generate": "turbo db:generate",
    "db:push": "pnpm --filter @interdomestik/database db:push",
    "db:studio": "pnpm --filter @interdomestik/database db:studio",
    "e2e:seed": "node scripts/seed-e2e-users.mjs",
    "mcp:setup": "./scripts/setup-mcp.sh",
    "mcp:audit": "pnpm --filter @interdomestik/qa run-all-audits",
    "mcp:test": "pnpm mcp:audit && pnpm test",
    "qa": "pnpm --filter @interdomestik/qa check",
    "qa:full": "pnpm lint && pnpm type-check && pnpm --filter @interdomestik/web test:unit --run && pnpm --filter @interdomestik/web test:e2e -- --grep smoke",
    "i18n:check": "node scripts/check-i18n.mjs",
    "smoke-test": "node scripts/smoke-test.mjs",
    "test": "pnpm --filter @interdomestik/web test:unit --run",
    "test:e2e": "pnpm --filter @interdomestik/web test:e2e"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "bcryptjs": "^3.0.3",
    "oslo": "^1.0.0",
    "postgres": "^3.4.3",
    "prettier": "^3.5.0",
    "turbo": "^2.6.0",
    "typescript": "^5.8.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@10.25.0",
  "pnpm": {
    "overrides": {
      "esbuild": "^0.25.0"
    }
  }
}
